extends layout

block content
    body
        .container
            .container.mt-4
                if rows && rows.length
                    .list-group
                        each reservation in rows
                            .row.justify-content-center
                                .col-12
                                    a(href="/lists/reservation/" + reservation.reservation_id, class="clearfix")
                                        | #{reservation.name}
                            .row.mt-2
                                .col-4
                                    p Zakres: #{moment(reservation.date_from).format('DD.MM.YYYY')}-#{moment(new Date(reservation.date_to)).format('DD.MM.YYYY')}
                                .col-4
                                    p Koszt jednostkowy #{reservation.price}
                                    p Koszt całkowity: #{reservation.reservation_price}
                                .col-4
                                    .row
                                        .col-6
                                            a(href="/lists/reservation/" + reservation.reservation_id, class="btn btn-danger")
                                                | Modyfikuj rezerwacje
                                        .col-6
                                            a(href="/lists/reservation/delete/" + reservation.reservation_id, class="btn btn-danger ml-2")
                                                | Anuluj rezerwacje

                else
                    p Nie masz jeszcze żadnej listy :(